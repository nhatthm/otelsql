root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
max_line_length = 160
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = space

[*.feature]
indent_style = space

[.golangci.yaml]
indent_size = 2

[{.github/**/*.yaml,.github/**/*.yml}]
indent_size = 2
